    "tsx": "^4.19.2",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vite-plugin-javascript-obfuscator": "^3.1.0",
    "vite-tsconfig-paths": "^5.1.3"
